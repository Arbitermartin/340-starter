<!-- views/inventory/search-member.ejs -->
<div id="searchMemberModal" class="modal-overlay-1">
  <div class="modal-content">
    <span class="modal-close" onclick="closeSearchMemberModal()">&times;</span>
    <h2>Search Member to Edit</h2>

    <div id="search">
      <label>First Name</label>
      <input type="text" id="searchFirstName" placeholder="Enter first name...">
      <button onclick="searchMembers()" class="btn-member">
        Search
      </button>
    </div>

    <div id="searchResults">
      <p>Enter a first name and click Search</p>
    </div>
  </div>
</div>

<script>
  function openSearchMemberModal() {
    document.getElementById('searchMemberModal').classList.add('active');
    document.getElementById('searchFirstName').value = '';
    document.getElementById('searchResults').innerHTML = '<p style="text-align:center; color:#666;">Enter a first name and click Search</p>';
  }

  function closeSearchMemberModal() {
    document.getElementById('searchMemberModal').classList.remove('active');
  }

  async function searchMembers() {
    const firstName = document.getElementById('searchFirstName').value.trim();
    if (!firstName) {
      document.getElementById('searchResults').innerHTML = '<p style="color:red;">Please enter a first name</p>';
      return;
    }

    try {
      const response = await fetch(`/account/search-member?firstname=${encodeURIComponent(firstName)}`);
      const members = await response.json();

      const resultsDiv = document.getElementById('searchResults');
      if (members.length === 0) {
        resultsDiv.innerHTML = '<p class="noMember">No members found</p>';
        return;
      }

      let html = '<h4 style="margin:10px 0;">Select Member to Edit:</h4>';
      members.forEach(member => {
        const photoSrc = member.member_profile_image 
          ? member.member_profile_image 
          : '/images/default-avatar.jpg';

        html += `
          <div class="member-search" 
               onclick='openEditMemberModal(${JSON.stringify(member)}); closeSearchMemberModal();'>
            <img src="${photoSrc}" 
                 alt="Photo" 
                 class="photo-style">
            <div class="flex">
              <strong>${member.member_firstname} ${member.member_lastname}</strong><br>
              <small class="small">${member.membership_number} • ${member.member_email || 'No email'}</small>
            </div>
            <span >Edit →</span>
          </div>
        `;
      });
      resultsDiv.innerHTML = html;
    } catch (error) {
      document.getElementById('searchResults').innerHTML = '<p style="color:red;">Search failed. Try again.</p>';
    }
  }

  document.getElementById('searchMemberModal').addEventListener('click', function(e) {
    if (e.target === this) closeSearchMemberModal();
  });
</script>