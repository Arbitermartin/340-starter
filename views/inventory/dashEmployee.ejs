<div class="dashboard-04">
    <!-- Sidebar -->
    <aside class="sidebar">
      <div class="logo-01">
        <img src="/images/site/uhwf-logo.webp" alt="UHWF Logo">
        <h1>UHWF Tanzania</h1>
      </div>
      <nav class="employee">
        <ul>
          <li><i class="bi bi-house-door"></i> Dashboard</li>
          <li><i class="bi bi-people"></i> Patients</li>
          <li><i class="bi bi-list-task"></i> Tasks</li>
          <li><i class="bi bi-file-earmark"></i> Documents</li>
          <li><i class="bi bi-clock"></i> Timesheet</li>
          <li><i class="bi bi-check-circle"></i> Attendance</li>
          <li><i class="bi bi-currency-dollar"></i> Payroll</li>
          <li><i class="bi bi-chat-dots"></i> Feedback</li>
