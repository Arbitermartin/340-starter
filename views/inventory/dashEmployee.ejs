    <!-- Main Content -->
    <main class="main-content-04">
      <!-- Header -->
      <header class="header-04">
        <input type="text" placeholder="Search here..." class="search-bar">
        <div class="user-info-01">
          <i class="bi bi-envelope"></i>
          <i class="bi bi-bell"></i>
          <img src="/images/user-avatar.png" alt="User Avatar">
        </div>
      </header>

      <!-- Greeting -->
      <section class="greeting">
        <h1>Good afternoon, John!</h1>
        <p>Here's a summary of your activities and tasks.</p>
      </section>

      <!-- Stats Cards -->
      <section class="stats">
        <div class="card-03">
          <i class="bi bi-people"></i>
          <h2>Patients Checked In</h2>
          <p>15</p>
        </div>
        <div class="card-03">
          <i class="bi bi-list-task"></i>
          <h2>Pending Tasks</h2>
          <p>5 <span class="change">-2 new</span></p>
        </div>
        <div class="card-03">
          <i class="bi bi-clock"></i>
          <h2>Attended Hours</h2>
          <p>32 hrs</p>
          <small>This Week: 142 hrs</small>
        </div>
        <div class="card-03 welcome-card">
          <h2>Welcome to UHWF!</h2>
          <p>Empowering communities through health.</p>
          <button>View Guide</button>
        </div>
      </section>

      <!-- Task Management -->
      <section class="tasks">
        <h2>Task Management</h2>
        <div class="tabs">
          <button>View All</button>
          <button>Medical</button>
          <button>Administrative</button>
          <button>Outreach</button>
        </div>
        <table>
          <tr>
            <td>Follow up consultation</td>
            <td>Jane Smith</td>
            <td>Tomorrow</td>
            <td>In Progress</td>
          </tr>
          <tr>
            <td>Record vital signs</td>
            <td>Michael Johnson</td>
            <td>Today</td>
            <td>Pending</td>
          </tr>
          <tr>
            <td>Outreach vaccination event</td>
            <td>Community Clinic</td>
            <td>Jun 1, 2024</td>
            <td>Completed</td>
          </tr>
          <tr>
            <td>Prepare weekly report</td>
            <td>Jun 3, 2024</td>
            <td>Pending</td>
          </tr>
        </table>
      </section>

      <!-- Feedback -->
      <section class="feedback">
        <h2>Feedback</h2>
        <p>How do you feel about your work today?</p>
        <div class="emojis">
          <i class="bi bi-emoji-frown"></i>
          <i class="bi bi-emoji-neutral"></i>
          <i class="bi bi-emoji-smile"></i>
          <i class="bi bi-emoji-heart-eyes"></i>
          <i class="bi bi-emoji-laughing"></i>
        </div>
        <button>Submit</button>
      </section>
    </main>
  </div>